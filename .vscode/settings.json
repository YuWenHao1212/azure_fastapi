{
  "git.enabled": true,
  "git.path": "git",
  "git.autorefresh": true,
  "git.detectSubmodules": false,
  "git.scanRepositories": [
    "/Users/yuwenhao/Documents/GitHub/azure_fastapi"
  ],
  "files.exclude": {
    "../*": true,
    "**/.git": false,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/docs/bubble_integration/legacy/**": true,
    "**/docs/bubble_integration/demos/**": true,
    "**/docs/bubble_integration/workflows/**": true
  },
  "search.exclude": {
    "../*": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },
  "files.watcherExclude": {
    "../*": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },
  "azureFunctions.deploySubpath": ".",
  "azureFunctions.scmDoBuildDuringDeployment": true,
  "azureFunctions.pythonVenv": ".venv",
  "azureFunctions.projectLanguage": "Python",
  "azureFunctions.projectRuntime": "~4",
  "azureFunctions.projectLanguageModel": 2,
  
  // Python 設定
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.terminal.activateEnvironment": true,
  
  // YAML 設定 - GitHub Actions
  "yaml.customTags": [
    "!secret scalar"
  ],
  
  // YAML 架構驗證
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml"
  },
  
  // 問題面板設定
  "problems.decorations.enabled": true,
  "problems.autoReveal": true,
  
  // 忽略 Bubble.io 相關檔案的錯誤檢查
  "typescript.tsdk": "node_modules/typescript/lib",
  "files.associations": {
    "**/docs/bubble_integration/**/*.js": "plaintext",
    "**/docs/bubble_integration/**/*.html": "html"
  },
  
  // 排除這些目錄的驗證
  "typescript.validate.enable": true,
  "javascript.validate.enable": true,
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  
}